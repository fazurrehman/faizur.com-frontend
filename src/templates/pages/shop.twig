{% extends "../layouts/layout.twig" %}
{% set pageClass = "shop" %}
{% set page = 'shop' %}
{% block content %}

    <section class="c-shop">
        <div class="c-shop-content">
            <div class="c-shop-container">
                <div class="c-shop-top c-hero">
                    <span class="comman-label">Shop</span>
                    <h1 class="h2 headline fontWeightMedium">Highest quality <i>design resources for</i>
                        <div class="animatedText animatedText--shop">
                            <aside class="animatedText__label">
                                <span class="word animated-text-word js-word">designers</span>
                                <span class="word animated-text-word js-word">freelancers</span>
                                <span class="word animated-text-word js-word">students</span>
                                <span class="word animated-text-word js-word">entrepreneurs</span>
                                <span class="word animated-text-word js-word">more...</span>
                            </aside>
                        </div>
                    </h1>
                </div>

                <div class="c-shop-bottom">
                    <section class="c-shop-section">
                         <div class="box-heading">
                         <h6 class="h6 headline fontWeightMedium">Products</h6>
                         </div>
                        <div class="c-shop-grid">
                            {% for product in products|sort %}
                                <div class="c-shop-grid-item">
                                    {% include "../components/molecules/shopcard.twig" %}
                                </div>
                            {% endfor %}

                        </div>
                    </section>


                </div>
            </div>
        </div>
    </section>




{% endblock %}
{% block included_scripts %}
    <script src="js/global/bundle.js"></script>
    <script>
        $(document).ready(function () {
            initWordAnimation();
        });
        $('.productcard .--has-no-discount .discount').text('');
        $('.productcard  .--has-no-discount .offer-price').text('');
    </script>

    <script>
        var firstHeight = $(".navbarMenu__top").height() + 'px';
        $(".navbarMenu__top").css("height", firstHeight);
    </script>





{% endblock %}